---
import Navbar from '../components/Navbar';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Metadatos principales -->
    <title>{title} | GatoBot - Tu Asistente Discord</title>
    <meta name="description" content="GatoBot es un bot de Discord versátil y amigable. Moderación, música, diversión y más. ¡Añade GatoBot a tu servidor ahora!" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://gatobot.gatoartstudio.art/" />
    <meta property="og:title" content="GatoBot - Tu Asistente Discord" />
    <meta property="og:description" content="GatoBot es un bot de Discord versátil y amigable. Moderación, música, diversión y más. ¡Añade GatoBot a tu servidor ahora!" />
    <meta property="og:image" content="https://gatobot.gatoartstudio.art/logo.svg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://gatobot.gatoartstudio.art/" />
    <meta property="twitter:title" content="GatoBot - Tu Asistente Discord" />
    <meta property="twitter:description" content="GatoBot es un bot de Discord versátil y amigable. Moderación, música, diversión y más. ¡Añade GatoBot a tu servidor ahora!" />
    <meta property="twitter:image" content="https://gatobot.gatoartstudio.art/logo.svg" />

    <!-- Metadatos adicionales -->
    <meta name="theme-color" content="#1a1f3c" />
    <meta name="author" content="GatoArtStudio" />
    <meta name="keywords" content="discord bot, gatobot, moderación discord, música discord, bot español, discord español" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://gatobot.gatoartstudio.art/" />
  </head>
  <body class="bg-gradient-to-br from-slate-950 via-[#0a0920] to-slate-950 min-h-screen text-white">
    <Navbar client:load />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 239, 68, 68;
    --accent-light: 255, 241, 242;
    --accent-dark: 127, 29, 29;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  /* Scrollbar personalizado */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #0a0920;
  }

  ::-webkit-scrollbar-thumb {
    background: #2dd4bf;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #14b8a6;
  }
</style>
