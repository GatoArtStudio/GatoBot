---
import Navbar from '../components/Navbar';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  navbar?: boolean;
}

const {
  title = 'GatoBot - Tu Asistente Discord',
  description = 'GatoBot es un bot de Discord versátil y amigable. Moderación, música, diversión y más. ¡Añade GatoBot a tu servidor ahora!',
  navbar = true
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Metadatos principales -->
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://gatobot.gatoartstudio.art/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://gatobot.gatoartstudio.art/logo.svg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://gatobot.gatoartstudio.art/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://gatobot.gatoartstudio.art/logo.svg" />

    <!-- Metadatos adicionales -->
    <meta name="theme-color" content="#1a1f3c" />
    <meta name="author" content="GatoArtStudio" />
    <meta name="keywords" content="discord bot, gatobot, moderación discord, música discord, bot español, discord español" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://gatobot.gatoartstudio.art/" />
  </head>
  <body class="bg-gradient-to-br from-background-100 via-background-200 to-background-50 min-h-screen text-text-900">
  {navbar && <Navbar client:load />}
    <slot />
  </body>
</html>

<style is:global>
  /* Scrollbar personalizado */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-50);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--accent-500);
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--accent-500);
  }
</style>
